{
    "compilerOptions": {
      "target": "ES5",                      // Target ECMAScript version
      "module": "commonjs",                 // Module system used by Node.js
      "declaration": true,                  // Generate .d.ts declaration files for TypeScript users
      "outDir": "./dist",                   // Output folder for compiled JavaScript files
      "rootDir": "./src",                   // Root folder of your TypeScript source files
      "strict": true,                       // Enable all strict type-checking options
      "esModuleInterop": true,              // Enable compatibility with ES modules
      "skipLibCheck": true,                 // Skip type checking of declaration files for faster compilation
      "forceConsistentCasingInFileNames": true // Enforce consistent casing in file names
    },
    "include": ["src/**/*"],                // Specify the files to be compiled
    "exclude": ["node_modules", "dist"]     // Exclude these directories from the compilation
  }
  